{
    "name": "combindma/cmi-payment",
    "description": "Laravel package to communicate with the CMI payment plateform",
    "keywords": [
        "combindma",
        "laravel",
        "cmi-payment"
    ],
    "homepage": "https://github.com/combindma/cmi-payment",
    "license": "MIT",
    "authors": [
        {
            "name": "Combind",
            "email": "webmaster@combind.ma",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "spatie/laravel-package-tools": "1.11.3",
        "illuminate/contracts": "9.12.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0",
        "orchestra/testbench": "^6.22",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Combindma\\Cmi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Combindma\\Cmi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Combindma\\Cmi\\CmiServiceProvider"
            ],
            "aliases": {
                "Cmi": "Combindma\\Cmi\\Facades\\Cmi"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
